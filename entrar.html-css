body{
    background-image: linear-gradient(45deg, cyan, yellow);
}
div{
    background-color: black;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 80px;
    border-radius: 15px;
    color: yellow;

}

input{
    padding: 15px;
    border-radius: 10px;
    outline: none;
    font-size: 15px;
}

button{
    background-color: blueviolet;
    border: none;
    padding: 15px;
    width: 100%;
    border-radius: 10px;
    color: aqua;
}

h1{
    text-align: center;
}
